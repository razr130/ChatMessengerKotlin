<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="@color/BlueLight"
        >

    <Button android:layout_width="150dp" android:layout_height="150dp"
            android:id="@+id/BtnUploadPhoto"
            android:background="@drawable/circle_imageupload"
            android:text="Select Photo"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
    />
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:id="@+id/BtnCircleImage"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/BlueDark"/>

    <EditText android:layout_width="match_parent" android:layout_height="50dp"
              android:background="@drawable/rounded_edittext"
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/BtnUploadPhoto"
              android:layout_marginRight="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginBottom="15dp"
              android:layout_marginTop="30dp"
              android:hint="Username"
              android:ems="10"
              android:paddingLeft="20dp"
              android:id="@+id/TxtUsernameRegis"
    />
    <EditText android:layout_width="match_parent" android:layout_height="50dp"
              android:background="@drawable/rounded_edittext"
              android:layout_centerHorizontal="true"
              android:layout_marginRight="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginBottom="15dp"
              android:paddingLeft="20dp"
              android:hint="Email"
              android:inputType="textEmailAddress"
              android:id="@+id/TxtEmailRegis"
              android:layout_below="@+id/TxtUsernameRegis"
    />
    <EditText android:layout_width="match_parent" android:layout_height="50dp"
              android:background="@drawable/rounded_edittext"
              android:layout_centerHorizontal="true"
              android:layout_marginRight="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginBottom="15dp"
              android:hint="Password"
              android:inputType="textPassword"
              android:id="@+id/TxtPasswordRegis"
              android:layout_below="@+id/TxtEmailRegis"
              android:paddingLeft="20dp"
    />
    <Button android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/BtnRegis"
            android:layout_below="@+id/TxtPasswordRegis"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:text="Register"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/TxtHaveAccount"
              android:layout_below="@id/BtnRegis"
              android:layout_centerHorizontal="true"
              android:text="Already Have an Account? Click Here"
              android:textColor="#ffffff"
              android:textSize="10sp"/>
</RelativeLayout>